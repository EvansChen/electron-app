{
  "name": "electron-app",
  "version": "1.0.0",
  "type": "module",
  "description": "一个简单的 Electron 应用",
  "main": "backend/main.js",
  "scripts": {
    "start": "chcp 65001 && electron .",
    "dev": "chcp 65001 && cross-env NODE_ENV=development electron . --enable-logging",
    "debug": "chcp 65001 && cross-env NODE_ENV=development electron --inspect=9229 --remote-debugging-port=9222 .",
    "debug:chatbot": "node --inspect-brk backend/chatbot.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint backend/ frontend/ --ext .js",
    "lint:fix": "eslint backend/ frontend/ --ext .js --fix",
    "clean": "rimraf dist/ dist-packager/ logs/",
    "build": "npm run clean && electron-builder",
    "build:win": "npm run clean && electron-builder --win",
    "build:mac": "npm run clean && electron-builder --mac",
    "build:linux": "npm run clean && electron-builder --linux",
    "dist": "npm run clean && electron-builder --publish=never",
    "package": "npm run clean && electron-packager . --platform=win32 --arch=x64 --out=dist-packager --overwrite",
    "release": "npm run test && npm run build"
  },
  "keywords": [
    "electron",
    "app",
    "desktop"
  ],
  "author": "Gu Rong",
  "license": "MIT",
  "devDependencies": {
    "electron": "^37.2.6",
    "electron-builder": "^26.0.12",
    "electron-packager": "^17.1.2"
  },
  "dependencies": {
    "@openai/agents": "^0.0.16",
    "dompurify": "^3.2.6",
    "dotenv": "^17.2.1",
    "marked": "^16.1.2",
    "openai": "^5.12.2",
    "zod": "<=3.25.67"
  },
  "build": {
    "appId": "com.gurong.electron-app",
    "productName": "chatbot",
    "icon": "icon.ico",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "chatbot.js",
      "index.html",
      "icon.ico",
      "node_modules/**/*",
      "!llm-config.json"
    ],
    "win": {
      "icon": "icon.ico",
      "target": {
        "target": "portable",
        "arch": [
          "x64"
        ]
      }
    }
  }
}
