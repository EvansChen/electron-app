{
  "testEnvironment": "node",
  "testMatch": [
    "**/tests/**/*.test.js",
    "**/__tests__/**/*.js"
  ],
  "collectCoverageFrom": [
    "backend/**/*.js",
    "frontend/**/*.js",
    "!**/node_modules/**",
    "!**/dist/**"
  ],
  "coverageDirectory": "coverage",
  "coverageReporters": [
    "text",
    "lcov",
    "html"
  ],
  "setupFilesAfterEnv": [
    "<rootDir>/tests/setup.js"
  ]
}
